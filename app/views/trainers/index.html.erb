<div class="container">
  <div class="row">
    <h3>Trainers</h3>
    <div class="column">
      <table class="table">
        <tbody>
          <% @trainers.each do |trainer| %>
            <tr>
            <%= render trainer %>
              <% Pokemon.find_by(:tainer => trainer) do |pokemon| %>
                  <%= render pokemon %>
                <%end%>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
